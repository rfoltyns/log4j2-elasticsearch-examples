<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="CONSOLE" />

        <!-- This is a minimal configuration compatible with Elasticsearch 7.8+ -->
        <Elasticsearch name="elasticsearch">
            <IndexName indexName="log4j2-elasticsearch-jest-springboot" />
            <EcsLayout>
                <KeyValuePair key="service.node.name" value="${env:HOSTNAME}" />
                <KeyValuePair key="service.version" value="${spring:project.version}" />
                <KeyValuePair key="abc" value="abcValue" />
            </EcsLayout>
            <AsyncBatchDelivery batchSize="2000" deliveryInterval="1000">
                <!-- Use 'classpath:BOOT-INF/classes/<template file name>' if template file is in the Spring Boot app resources (yes, it's ugly) -->
                <!-- Use 'classpath:<template file name>' if template file is provided by one of your dependencies -->
<!--                <IndexTemplate name="log4j2-elasticsearch-jest-springboot-ecs-template"-->
<!--                               path="classpath:indexTemplate-8.json" />-->
<!--                <ILMPolicy name="log4j2-elasticsearch-jest-springboot-ilm-policy" rolloverAlias="log4j2-elasticsearch-jest-springboot-ecs" path="classpath:ilmPolicy-7.json" />-->
                <JestHttp serverUris="http://localhost:9200"/>
            </AsyncBatchDelivery>
        </Elasticsearch>
    </Appenders>

    <Loggers>
        <AsyncLogger name="elasticsearch" additivity="false">
            <AppenderRef ref="elasticsearch" />
        </AsyncLogger>
        <Root level="info">
            <AppenderRef ref="CONSOLE" />
        </Root>
    </Loggers>
</Configuration>